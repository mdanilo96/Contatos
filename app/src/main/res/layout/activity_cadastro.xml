<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marcos.contatos.CadastroActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_weight="0.19" />

    <TextView
        android:text="@string/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_weight="0.07" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/TextFieldNome"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0.07" />

    <EditText
        android:layout_width="match_parent"
        android:text=""
        android:ems="10"
        android:id="@+id/TextFieldEmailcad"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" />

    <TextView
        android:text="@string/text_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_weight="0.07" />

    <EditText
        android:id="@+id/TextFieldTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="" />

    <TextView
        android:text="@string/text_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/TextFieldEnd"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Senha:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7" />

    <EditText
        android:id="@+id/TextFieldSenCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.19"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:text="Confirme Sua Senha:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9" />

    <EditText
        android:id="@+id/TextFieldSenCadConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnCancelarCad"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Cancelar" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Cadastrar" />x+
    </LinearLayout>

</LinearLayout>
